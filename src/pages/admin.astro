<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="robots" content="noindex" />
  
  <link href="/admin/config.yml" type="text/yaml" rel="cms-config-url" />
  <title>Pannello Admin - Elena Ghini Photo</title>
  
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>
  
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>

  <script>
    // 1. Diciamo al CMS di non partire da solo
    window.CMS_MANUAL_INIT = true; 

    // 2. Usiamo il gancio di Identity per avviare il CMS
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on('init', function() {
        // Solo dopo che Identity Ã¨ pronto e ha processato il token, avviamo il CMS
        window.CMS.init();
      });
    } else {
      // Fallback: se Identity non parte per qualche motivo, avviamo comunque il CMS
      window.CMS.init();
    }
  </script>
</body>
</html>