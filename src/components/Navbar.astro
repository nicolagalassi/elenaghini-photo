        <a href={homeLink} class="text-2xl font-light tracking-[0.2em] uppercase text-gray-900 hover:text-gray-600 transition-colors">
            Elena Ghini <span class="font-bold">Photo</span>
        </a>
        
        <div class="flex flex-col md:flex-row items-center gap-4 md:gap-8 text-sm font-medium tracking-wide text-gray-600">
            
            <div class="flex gap-6">
                <a href={homeLink} class="hover:text-black transition-colors">HOME</a> 
                <a href={portfolioLink} class="hover:text-black transition-colors">PORTFOLIO</a>
            </div>

            <div class="hidden md:block w-px h-4 bg-gray-300"></div>

            <div class="flex gap-2 text-xs font-bold">
